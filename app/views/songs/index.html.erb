
    <% if user_signed_in? %>
<h1 style="padding-top:1.5em;padding-bottom:1.5em;">Current Songlist</h1>
<p class="song_genre" style="text-align:center"><%= number_with_delimiter(@songs.count, :delimiter => ',') %> songs total!</p>
<p class="song_genre" style="text-align:center">Page <%= @songs.current_page %>/<%= @songs.total_pages %></p>
<% @songs.each do |song| %>
<% if song.artist %>
<div class="song_block">
  <p class="song_title"><%= link_to song.title, song %><span style="font-size:0.8em;font-weight:300;color:#9E9E9E;letter-spacing:0.1em">||<%= number_with_delimiter(song.play_count, :delimiter => ',') %> plays</span></p>
  <p><span class="song_artist"><%= link_to song.artist.name, song.artist %></span> - <span class="song_genre" style=""><%= song.artist.genre %></span></p>
 <!-- <p><%= link_to 'Show', song %> | <%= link_to 'Edit', edit_song_path(song) %> | <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></p> -->
</div>
<% else %>
<% puts song %>
<% end %>
<% end %>

<br>
<div class="apple_pagination"> 
<%= will_paginate @songs %>
</div>
<% else %>
<h1 style="padding-top:1.5em;padding-bottom:1.5em;">Welcome to my Test App!</h1>
<p class="song_artist" style="text-align:center">Try <%= link_to "creating an account", new_user_registration_path %> or <%= link_to "signing in", new_user_session_path %>!</p>
<p class="song_artist" style="text-align:center">Copious amounts of data await you! <span style="position:relative;top:-0.5em;letter-spacing:0.1em;font-size:0.6em">such data!</span></p>
<% end %>
